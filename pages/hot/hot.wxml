<import src="../../templates/copyright.wxml" />
<include src="../../templates/articleList/articleList.wxml" />


<view class="top-bar">
  <block wx:for="{{topBarItems}}" wx:key="id">
    <view class="top-bar-item {{item.selected ? 'top-bar-item-Selected': '' }}" catchtap="onTapTag" id="{{item.id}}" data-type="{{item.type}}">{{item.name}}</view>
  </block>
</view>

<view class="list-container">
  <template is="{{(listStyle === 'waterFlowArticle' || listStyle === 'noImageArticle') ? 'rightThumbnailArticle' : listStyle}}" data="{{articlesList}}" />
  <view class="copyright" style="display:{{floatDisplay}}">
    <template is="tempCopyright" data="{{copyright}}" />
  </view>

</view>