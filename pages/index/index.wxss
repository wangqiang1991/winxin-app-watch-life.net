/* 顶部Tab菜单 */
.tab-box {
  width: 100%;
  height: 80rpx;
  background: #fff;
}

.tab-menu {
  width: 570rpx;
  height: 80rpx;
  margin: 0 auto;
  white-space: nowrap;
  z-index: 997;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 88rpx;
}

.tab-menu-item {
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #999;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.tab-menu-item.active {
  color: #2f80ed;
  font-weight: 600;
  position: relative;
}

.tab-menu-item.active:after {
  display: block;
  height: 4rpx;
  width: 28rpx;
  content: '';
  background: #2f80ed;
  border-radius: 2rpx;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translate(-50%, 0);
}

