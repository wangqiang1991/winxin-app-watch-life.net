/* pages/appointment/appointment.wxss */

.lybanner {
  width: 100%;
  height: 270rpx;
}

page {
  background-color: #ffffff;
}

.container-title {
  font-size:30rpx;
color:#000;
  background-color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 24rpx;
}

.profile-item {
  width: 700rpx;
  background-color: #fff;
  padding: 0 25rpx;
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
}

.profile-title {
  margin-right: 24rpx;
  width: 150rpx;
  font-size: 30rpx;
  color: #000;
}

.messeges {
  background-color: #fff;
  padding: 24rpx;
  height: 188rpx;
  font-size: 30rpx;
}

profile-content {
  background-color: #f5f5f5;
 
  width: 500rpx;
  font-size: 26rpx;
  color: rgb(153, 150, 150);
}

textarea {
  width: 300px;
  height: 200px;
  display: block;
  position: relative;
  z-index: 9;
  overflow:hidden;
white-space:nowrap;

}

.button-container {
  position: fixed;
  width: 750rpx;
  bottom: 60rpx;
  margin-top: 80rpx;
}

.button-container button {
 height:60rpx;
width:200rpx;
line-height:60rpx;
border-radius:44rpx;
background-color:#0095ff;
text-align:center;
vertical-align:middle;
font-size:30rpx;
color:#fff;

}

.button-container button::after {
  display: none;
}
