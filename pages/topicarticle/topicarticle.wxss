.audio-play-list {
  height: 60rpx;
  margin: 30rpx 0 30rpx 30rpx;
  display: flex;
  align-items: center;
}

.audio-play-list .item {
  background: #f99477;
  width: 4px;
  height:60rpx;
  border-radius: 0;
  margin: 0 2px;
  transform: scale(1, 0.2);
}

.first {
  animation: scale 0.8s linear infinite alternate;
}

.second {
  animation: scale 0.8s 0.1s linear infinite alternate;
}

.third {
  animation: scale 0.8s 0.3s linear infinite alternate;
}

.fourth {
  animation: scale 0.8s 0.5s linear infinite alternate;
}

.fifth {
  animation: scale 0.8s 0.7s linear infinite alternate;
}

.sixth {
  animation: scale 0.8s 0.9s linear infinite alternate;
}

.seventh {
  animation: scale 0.8s 1.1s linear infinite alternate;
}

.eighth {
  animation: scale 0.8s 1.3s linear infinite alternate;
}

.ninth {
  animation: scale 0.8s 1.5s linear infinite alternate;
}

@keyframes scale {
  0% {
    transform: scale(1, 0.2);
    background: #FEAC5E;
  }

 50% {
    transform: scale(1, 0.6);
    background: #f2709c;
  }

  100% {
    transform: scale(1, 1);
    background: #ff9472;
  }
}

