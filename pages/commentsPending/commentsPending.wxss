  width: 500rpx;
  text-align: left;
  border-bottom-left-radius: 36rpx;
  border-top-left-radius: 36rpx;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}

.bottom-btn {
  margin: auto 0;
  width: 85rpx;
  height: 85rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}

.bottom-text {
  background: #ebf0f4;
  margin: auto 0 auto 10rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 40rpx;
  width: 260rpx;
  color: #95989d;
  padding: 0 30rpx;
