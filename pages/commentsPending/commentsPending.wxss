/*  comment   */

.comment-container {
  padding: 32rpx 32rpx 0;
  background-color: #f2f2f2;
}

.commentheader {
  padding: 20rpx 0;
  text-align: left;
  font-weight: normal;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #959595;
}

.comment {
  border-bottom: 1rpx solid #eee;
  padding: 32rpx 40rpx;
  margin: 0 0 24rpx;
}

.comment-children {
  border-top: 1px solid #eee;
  margin-left: 40rpx;
}

.comment-user {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  outline: none;
  color: #959595;
  margin: 10rpx 0;
}

.comment-user-information {
  margin-left: 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 610rpx;
}

.comment-user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 300;
}

.comment-user-date {
  font-size: 24rpx;
  color: #959595;
}

.comment-date {
  font-size: 25rpx;
  line-height: 1.2;
  font-weight: normal;
  outline: none;
  margin-bottom: 30rpx;
  color: #959595;
}

.comment-response {
  color: #333;
  font-size: 30rpx;
  line-height: 1.6rem;
  margin-bottom: 50rpx;
}

.comment-summary {
  color: #333;
  font-size: 30rpx;
  line-height: 1.4rem;
  margin-bottom: 28rpx;
  margin-left: 76rpx;
  overflow-wrap: break-word;
}

.comment-style-line {
  width: 4rpx;
  height: 22rpx;
  border-radius: 4rpx;
  background-color: #2f80ed;
  margin-right: 8rpx;
}

.comment-reply-name {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  font-weight: 300;
}

.replay-second-content {
  /* background-color: #f9fafa; */
  margin: 0 0 0 76rpx;
}

.replay-user:last-child {
  border-bottom: none;
}

.replay-user {
  display: flex;
  flex-direction: column;
  /* align-items: center;
  height: 80rpx; */
  font-size: 28rpx;
  line-height: 1.4rem;
  font-weight: normal;
  outline: none;
  color: #333;
  margin-bottom: 28rpx;
  /* padding: 12rpx 0;
  border-bottom: 1rpx #c4c4c4 solid;
   */
}

.comment-repaly {
  color: #757575;
  font-size: 30rpx;
  line-height: 1.6rem;
  margin-bottom: 10rpx;
}

.comment-post {
  color: #757575;
  font-size: 30rpx;
  line-height: 1.6rem;
  margin-bottom: 50rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
}

.comment-respond {
  /* margin-top: 10rpx; */
}

.comment-reply-title {
  font-size: 40rpx;
  line-height: 1.5;
  color: #21759b;
}

.comment-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  box-shadow: 0 0 6px rgba(30, 20, 20, 0.1);
  z-index: 100;
}

.comment-box {
  padding: 24rpx 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  /* height: 64rpx;
    border-bottom: 1px solid red;
  border-top: 1px solid red; */
}

.comment-box-hidden {
  display: none !important;
}

.comment-area {
  border: 1px solid #ccc;
  margin-top: 20rpx;
  max-width: 800rpx;
}

.comment-input-btn {
  display: flex;
  flex-direction: row;
}

.comment-button {
  height: 72rpx;
  width: 200rpx;
  line-height: 72rpx;
  /* display: flex !important;
  flex-direction: column;
  justify-content: center;
  text-align: center; */
  font-size: 26rpx;
  background-color: #f5f7f7;
  color: #4c4c4c;
  border-bottom-left-radius: 0 !important;
  border-top-left-radius: 0 !important;
  border-top-right-radius: 36rpx !important;
  border-bottom-right-radius: 36rpx !important;
  margin-left: 0;
}

.comment-button::after {
  border: none;
}

.replay-button {
  width: 160rpx;
  display: flex !important;
  flex-direction: column;
  justify-content: center;
  margin-right: 0rpx;
  /* border-bottom-left-radius: 6px !important;
