  font-size: 12px;
  color: #959595;
  background-color: #eee;
  border-radius: 40rpx;
}

.replay-button::after {
  border: none;
}

.comment-input {
  background-color: #ebf0f4;
  padding: 0 3px 0 10px;
  font-size: 28rpx;
  height: 72rpx;
  /* max-height: 25px;
