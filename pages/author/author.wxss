.readlog-container {
  width: 100%;
  height: 320rpx;
  position: relative;
  overflow: hidden;
  background: #2f80ed;
}

.userinfo-bg {
  width: 100%;
  height: 100%;
  position: absolute;
	filter: blur(60px) brightness(94%); 
}

.userinfo {
  width: 100%;
  position: absolute;
  top: 20rpx;
}

.userinfo-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border-width: 2rpx;
  border-style: solid;
  border-color: rgba(255, 255, 255, 0.6);
  background-color: #f5f7f7;
  margin-left: 40rpx;
}

.user-data {
  width: 60%;
  margin: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
}

.user-data-item {
  text-align: center;
  font-size: 18px;
  font-weight: 600;
}

.user-data-item .title {
  font-size: 12px;
  font-weight: normal;
}

.userinfo-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.userinfo-profile {
  margin-left: 48rpx;
  color: #fff;
}

.userinfo-nickname {
  font-weight: 600;
  font-size: 18px;
  line-height: 1;
}

.userinfo-role {
  font-size: 12px;
  margin-top: 8rpx;
  line-height: 1;
}

.userinfo-role>text {
  margin-left: 40rpx;
}

.btn-author-follow {
  height: 60rpx;
  width: 160rpx;
  color: #333;
  font-size: 13px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  margin-right: 40rpx;
}

/* 选项卡样式 */

.top-bar {
  position: relative;
  z-index: 99;
  height: 88rpx;
  background: #fff;
  color: #959595;
  width: 100%;
  /* padding-top: 300rpx; */
  box-shadow: 0px 4px 8px #f5f7f7;
}

.top-bar-item {
  display: inline-block;
  width: 33.3%;
  text-align: center;
  line-height: 88rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.top-bar-item-Selected {
  color: #2f80ed;
  font-weight: 600;
  position: relative;
}

.top-bar-item-Selected:after {
  display: block;
  height: 4rpx;
  width: 36rpx;
  content: '';
  background: #2f80ed;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translate(-50%, 0);
}

.list-container {
  margin-top: 0;
}
