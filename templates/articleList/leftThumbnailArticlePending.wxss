/*common list  for  index  list page */

.left-common-list {
  background: #f5f7f7;
}

.left-list-item {
  position: relative;
  padding: 40rpx;
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 16rpx;
}

.left-list-item image.cover {
  position: absolute;
  left: 40rpx;
  top: 40rpx;
  width: 240rpx;
  height: 180rpx;
  background: #f5f7f7;
}

.left-content-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 180rpx;
  margin-left: 270rpx;
}

.left-content-title {
  margin-bottom: 20rpx;
}

.left-content-title text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 30rpx;
  line-height: 1.4;
  font-weight: 500;
  color: #333;
}

.left-content-popularity{
  margin-right: 40rpx;
  color: #959595;
  font-size: 24rpx;
}

.left-content-popularity >text {
  display: inline-block;
  margin-right: 32rpx;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 24rpx;
  border-radius: 30rpx;
  background: #fff;
  border: 1px solid #2f80ed;
  color: #2f80ed;
  font-size: 10px;
}

/*common list end */
