<template name="leftThumbnailArticle">
  <view class="left-common-list">
    <block wx:key="id" wx:for="{{articlesList}}">
      <view class="list-item-ad" index="{{index}}" wx:if="{{index%item.listAdEvery ==0  && index!=0  && item.listAd =='1' && item.listAdId !='' && listAdsuccess}}">
        <ad unit-id="{{item.listAdId}}" ad-intervals="30" binderror="listAdbinderror"></ad>
      </view>
      <view class="left-list-item" index="{{index}}" data-posttype="{{item.postType}}" data-type="{{item.type}}" id="{{item.id}}"  data-weixinmptype="{{item.raw_weixinmp_type}}" data-weixinmpurl="{{item.raw_weixinmp_url}}" bindtap="redictDetail">
        <image src="{{item.post_medium_image}}" mode="aspectFill" class="cover"></image>

        <view class="left-content-right">
          <view class="left-content-title">
            <text>{{item.title.rendered}}</text>
          </view>
          <view class="left-content-price" wx:if="{{item.goods_price}}">
            <text>￥{{item.goods_price}}</text><text wx:if="{{item.sales_info}}">{{item.sales_info}}</text>  
          </view>
          <view class='left-content-popularity'>
            <text>浏览 {{item.pageviews}}</text>
            <text>评论 {{item.total_comments}}</text>
            <text>点赞 {{item.like_count}}</text>
          </view>
        </view>
      </view>
    </block>
  </view>
</template>