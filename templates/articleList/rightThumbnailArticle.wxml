<template name="rightThumbnailArticle">
  <view class="right-common-list">
    <block wx:key="id" wx:for="{{articlesList}}">
      <view class="list-item-ad" index="{{index}}" wx:if="{{index%item.listAdEvery ==0 && index!=0  && item.listAd =='1' && item.listAdId !='' && listAdsuccess}}">
        <ad unit-id="{{item.listAdId}}" ad-intervals="30" binderror="listAdbinderror"></ad>
      </view>
      <view class="right-list-item" index="{{index}}" data-posttype="{{item.postType}}"  data-type="{{item.type}}" id="{{item.id}}"  data-weixinmptype="{{item.raw_weixinmp_type}}" data-weixinmpurl="{{item.raw_weixinmp_url}}"  bindtap="redictDetail">

        <view class='right-content-left'>
          <view class="right-content-title">
            <text>{{item.title.rendered}}</text>
          </view>
          <view class="right-content-price"  wx:if="{{item.goods_price}}">
            <text>￥{{item.goods_price}}</text><text wx:if="{{item.sales_info}}">{{item.sales_info}}</text>  
          </view>
          <view class="right-content-popularity">
            <text class="">浏览 {{item.pageviews}}</text>
            <text class="">评论 {{item.total_comments}}</text>
            <text class="">点赞 {{item.like_count}}</text>
          </view>
        </view>

        <image src="{{item.post_medium_image}}" mode="aspectFill" class="cover"></image>

      </view>
      
    </block>
  </view>
</template>