/*common list  for  index  list page */

.downBigImageArticle-common-list {
  margin-bottom: 24rpx;
  padding-top: 32rpx;
}

.downBigImageArticle-common-list .list-item {
  position: relative;
  margin: 0 24rpx 48rpx;
  min-height: 150rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 4rpx 28rpx 0 rgba(0, 0, 0, 0.08);
  border-radius: 10rpx;
}

.common-list-img {
  width: 702rpx;
  height: 400rpx;
  vertical-align: middle;
  text-align: center;
  overflow: hidden;
}

.downBigImageArticle-common-list .list-item.has-img image.cover {
  width: 702rpx;
  height: 400rpx;
}

.common-list-img-rs {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: -10%;
  padding-left: 24rpx;
  padding-right: 24rpx;
}

.common-list-img-resources image {
  width: 140rpx;
  height: 44rpx;
}

.common-list-img-save image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}

.common-list-img-save text {
  font-size: 24rpx;
  color: #fff;
}

.downBigImageArticle-common-list .list-item.has-img .content-title {
  padding: 32rpx 32rpx 0 32rpx;
  word-wrap: break-word;
  word-break: normal;
  margin-bottom: 2rpx;
}

.content-title-word {
  font-size: 36rpx;
  line-height: 1.6;
  font-weight: bold;
  color: #333;
}

.content-title-score {
  color: #ffc900;
  font-size: 54rpx;
  font-weight: 200;
  padding-left: 24rpx;
}

.content-title .list-item.has-img .content-date {
  padding-bottom: 32rpx;
  float: right;
  text-align: right;
  display: flex;
  vertical-align: middle;
}

.downBigImageArticle-common-list .list-item.has-img .content-date image {
  width: 28rpx;
  height: 28rpx;
  margin: 0 8rpx 0 24rpx;
  vertical-align: middle;
}

.downBigImageArticle-common-list .list-item.has-img .content-date {
  padding: 8rpx 32rpx 32rpx 0;
  display: flex;
  vertical-align: middle;
}

.downBigImageArticle-common-list .list-item .content-date text {
  color: #b4b4b4;
  font-size: 24rpx;
  line-height: 1.2;
  font-weight: normal;
}

.list-item-ad {
  margin-bottom: 16rpx;
}
