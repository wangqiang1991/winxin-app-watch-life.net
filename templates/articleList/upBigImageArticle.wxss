/*common list  for  index  list page */

.up-common-list {
  background: #f5f7f7;
}

.up-list-item {
  position: relative;
  overflow: hidden;
  background: #fff;
  padding: 40rpx;
  margin-bottom: 16rpx;
}

.up-content-cover {
  width: 100%;
  height: 360rpx;
  background: #f5f7f7;
}

.up-content-cover image {
  width: 100%;
  height: 360rpx;
}

.up-content-title {
  font-size: 32rpx;
  line-height: 1.6;
  font-weight: 500;
  color: #333;
  word-wrap: break-word;
  word-break: normal;
  margin-top: 32rpx;
}

.right-content-price text {
  font-size: 28rpx;
  font-weight: 500;
  color: #ff5733;
  margin-right: 20rpx;
}
.right-content-price text:last-child{
  margin-right: 0;
}

.up-content-bottom {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #959595;
  margin-top: 12rpx;
}

.up-content-bottom text:not(:last-child) {
  margin-right: 32rpx;
}

/* 广告组件 */
.list-item-ad {
  margin-bottom: 16rpx;
}
