.no-common-list {
  background-color: #f5f7f7;
}

.no-list-item {
  position: relative;
  overflow: hidden;
  background: #fff;
  padding: 40rpx;
  margin-bottom: 16rpx;
}

.list-item-ad {
  margin-bottom: 16rpx;
}

.no-content-cover {
  width: 100%;
  height: 360rpx;
  background: #f5f7f7;
}

.no-content-cover>image {
  width: 100%;
  height: 360rpx;
}

.no-content-title {
  font-size: 32rpx;
  line-height: 1.6;
  font-weight: 500;
  color: #333;
  word-wrap: break-word;
  word-break: break-all;
}
.right-content-price text {
  font-size: 28rpx;
  font-weight: 500;
  color: #ff5733;
  margin-right: 20rpx;
}
.right-content-price text:last-child{
  margin-right: 0;
}
.no-content-excerpt {
  font-size: 28rpx;
  line-height: 1.6;
  color: #959595;
  word-wrap: break-word;
  word-break: break-all;
  text-align: justify;
  padding: 10rpx 0;
}

.no-content-bottom {
  display: flex;
  justify-content: space-between;
  color: #959595;
  font-size: 24rpx;
  margin: 12rpx 0 16rpx;
}

.no-content-bottom view:first-child text:not(:last-child){
  margin-right: 32rpx;
}
