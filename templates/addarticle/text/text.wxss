.content-title {
 font-size: 32rpx;
  color: #333;
  font-weight: bold;
  display: flex;
  align-items: center;
  margin-bottom: 14rpx;
}
.content-title>text{
  width: 10rpx;
  height: 10rpx;
  display: block;
  background: #4b9bfe;
  border-radius: 50%;
  margin-right: 10rpx;
}

.content-intro {
  background: #fff;
  border: 1px solid #e6e6e6;
  border-radius: 12rpx;
  width: 100%;
  height: 200rpx;
  padding: 16rpx 60rpx 16rpx 20rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  position: relative;
  overflow: hidden;
}

.content-intro textarea {
  width: 100%;
  height: 180rpx; 
  z-index: 10;
}
textarea{
  z-index: 10;
  position: static;
}
.content-intro image {
  width: 28rpx;
  position: absolute;
  top: 16rpx;
  right: 20rpx;
}