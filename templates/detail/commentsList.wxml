<template name="commentsList">
  <block wx:key="id" wx:for-items="{{commentsList}}">
    <view class="comment">
      <view class="comment-user">
        <image src="{{item.author_url}}" class="gravatarImg"></image>
        <view class="comment-user-information">
          <view class="comment-user-name" catchtap="replay" data-id="{{item.id}}" data-name="{{item.author_name}}" data-userid="{{item.userid}}" data-formid="{{item.formid}}" data-commentdate="{{item.date}}">{{item.author_name}} </view><text wx:if="{{detail.author==item.userid}}" class="authortip">作者</text>
          <view class="comment-user-date" catchtap="replay" data-id="{{item.id}}" data-name="{{item.author_name}}" data-userid="{{item.userid}}" data-formid="{{item.formid}}" data-commentdate="{{item.date}}">{{item.date}}</view>
        </view>
      </view>
      <view class="comment-summary" catchtap="replay" data-id="{{item.id}}" data-name="{{item.author_name}}" data-userid="{{item.userid}}" data-formid="{{item.formid}}" data-commentdate="{{item.date}}"> {{item.content}}

        <!-- 一级回复-->
        <view wx:for="{{item.child}}" wx:key="itemid1" wx:for-index="idx" wx:for-item="item1" class='replay-second-content'>
          <view class="replay-user" bindtap="replay" data-id="{{item1.id}}" data-name="{{item1.author_name}}" data-userid="{{item1.userid}}" data-formid="{{item1.formid}}" data-commentdate="{{item1.date}}">
            <view class='comment-reply-name'>
              <view class="comment-style-line"></view>
              {{item1.author_name}}<text wx:if="{{detail.author==item1.userid}}" class="authortip">作者</text> 回复 {{item.author_name}}</view>{{item1.content}}</view>


          <!-- 二级回复-->
          <view wx:for="{{item1.child}}" wx:key="itemid2" wx:for-index="idx" wx:for-item="item2">
            <view class="replay-user" bindtap="replay" data-id="{{item2.id}}" data-name="{{item2.author_name}}" data-userid="{{item2.userid}}" data-formid="{{item2.formid}}" data-commentdate="{{item2.date}}">
              <view class='comment-reply-name'>
                <view class="comment-style-line">
                </view>
                {{item2.author_name}} <text wx:if="{{detail.author==item2.userid}}" class="authortip">作者</text> 回复 {{item1.author_name}}</view>{{item2.content}}</view>

            <!-- 三级回复-->
            <view wx:for="{{item2.child}}" wx:key="itemid3" wx:for-index="idx" wx:for-item="item3">
              <view class="replay-user" bindtap="replay" data-id="{{item3.id}}" data-name="{{item3.author_name}}" data-userId="{{item3.userid}}" data-formid="{{item3.formid}}" data-commentdate="{{item3.date}}">
                <view class='comment-reply-name'>
                  <view class="comment-style-line">
                  </view>
                  {{item3.author_name}} <text wx:if="{{detail.author==item3.userid}}" class="authortip">作者</text>回复 {{item2.author_name}}</view>{{item3.content}}
              </view>

              <!-- 四级回复-->
              <view wx:for="{{item3.child}}" wx:key="itemid4" wx:for-index="idx" wx:for-item="item4">
                <view class="replay-user">
                  <view class='comment-reply-name'>
                    <view class="comment-style-line">
                    </view>
                    {{item4.author_name}} <text wx:if="{{detail.author==item4.userid}}" class="authortip">作者</text> 回复 {{item3.author_name}}</view>{{item4.content}}</view>
              </view>
              <!-- 四级回复-->

            </view>
            <!-- 三级回复-->

          </view>
          <!-- 二级回复-->

        </view>
        <!-- 一级回复-->
        
        <!-- 删除评论 -->
        <view wx:if="{{memberUserInfo.member =='00'}}" class="comment-btn-del" catchtap="deleteComment" data-id="{{item.id}}">删除</view>
      </view>

    </view>
  </block>
</template>