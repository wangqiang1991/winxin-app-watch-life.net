/*顶部tab*/

.tab-search-btn {
  height: 85rpx;
  width: 85rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: absolute;
  left: 6rpx;
  top: -2rpx;
}

.tab-custom-btn {
  height: 85rpx;
  width: 85rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: absolute;
  right: 5rpx;
  top: -7rpx;
  z-index: 9999;
}

.tab-custom-btn-open {
  transform-origin: center center;
  transform: rotateZ(180deg);
  position: fixed;
  background: #fff;
}

.columnPannelHeader {
  position: fixed;
  background: #fff;
  top: 0;
  left: 0;
  z-index: 9999;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding-top: 80rpx;
  color: #959595;
}

.night.columnPannelHeader {
  background: #1a1a1a;
}

.night.columnPannelHeader.amoled {
  background: #000;
}

.columnPannel {
  width: 100%;
  height: 100%;
  position: relative;
  top: 0;
  left: 0;
  box-sizing: border-box;
  background: #fff;
  padding-top: 160rpx;
  z-index: 9998;
}

.night.columnPannel {
  background: #1a1a1a;
}

.night.columnPannel.amoled {
  background: #000;
}

.columnPannelTitle {
  font-size: 30rpx;
  line-height: 74rpx;
  padding: 0 30rpx;
  height: 74rpx;
  white-space: nowrap;
  box-sizing: border-box;
}

.night .columnPannelTitle {
  color: #999;
}

.columnPannelTitle .columnPannelDesText {
  font-size: 27rpx;
  color: #bbb;
}

.columnPannelHeader .columnPannelEditBtn {
  font-size: 28rpx;
  border: 1rpx solid #ddd;
  border-radius: 25rpx;
  padding: 4rpx 20rpx;
  position: absolute;
  right: 10rpx;
  top: 13rpx;
}

.night.columnPannelHeader .columnPannelEditBtn {
  color: #999;
}

.selected-pannel, .unselected-pannel {
  padding: 0 0 0 30rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.night .selected-pannel, .night .unselected-pannel {
  color: #999;
}

.column-item-selected, .column-item-unselected {
  display: inline-block;
  position: relative;
  width: 180rpx !important;
  margin: 36rpx 0 15rpx 0;
  border: 1rpx solid #c4c4c4;
  text-align: center;
  border-radius: 15rpx;
  font-size: 28rpx;
  font-weight: 900;
  white-space: nowrap;
  /* box-sizing: border-box; */
}

.column-item-selected2-container {
  margin-left: 30rpx;
}

.column-item-selected2 {
  display: inline-block;
  position: relative; 
  width: 150rpx;
  margin: 0 15rpx 15rpx 0;
  border: 1rpx solid #c4c4c4;
  text-align: center;
  border-radius: 15rpx;
  font-size: 26rpx;
  white-space: nowrap;
  /* box-sizing: border-box; */
}

.night .column-item-selected, .night .column-item-unselected {
  border: 1rpx solid #2c2c2c;
}

.column-item-selected-first {
  color: #999;
}

.column-item-moving {
  border: 1rpx solid #2f80ed;
  color: #2f80ed;
}

.night .column-item-moving {
  border: 1rpx solid #8d4444;
  color: #8d4444;
}

.delete-column-btn {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: -13rpx;
  top: -13rpx;
}

.column-item-selected-text {
  max-width: 100%;
  overflow: hidden;
}

.tab-layout {
  width: 630rpx;
  height: 74rpx;
  padding: 0 26rpx 0 20rpx;
  margin: 0 auto;
  white-space: nowrap;
  z-index: 999;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 60rpx;
}

.tab-layout-item {
  display: inline-block;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.night .tab-layout-item {
  color: #999;
}

.tab-layout-item.active {
  color: #2f80ed;
}

.night .tab-layout-item.active {
  color: #8d4444;
}

.tab-layout-item.active:after {
  display: block;
  height: 6rpx;
  width: 26rpx;
  content: '';
  background: #2f80ed;
  margin: 0 auto;
  margin-top: -6rpx;
  border-radius: 6rpx;
}

.night .tab-layout-item.active:after {
  background: #8d4444;
}

.main-container {
  height: 100%;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  box-sizing: border-box;
  padding-top: 74rpx;
}

.night .main-container {
  background: #242424;
}

.night.amoled .main-container {
  background: #000;
}

swiper.lists-container {
  height: 100%;
}

.list-container {
  height: 100%;
}

.slider-container {
  margin-bottom: 15rpx;
  height: 300rpx;
}

.slider-image-container {
  width: 690rpx;
  margin-top: 20rpx;
  margin-bottom: 15rpx;
}

.slide-image {
  border-radius: 6rpx;
  width: 690rpx;
  height: 276rpx;
}

.night .slide-image {
  opacity: 0.7;
}

.refresh-btn-container {
  position: fixed;
  bottom: 150rpx;
  right: 160rpx;
}

.night.refresh-btn-container {
  opacity: 0.7;
}

.refresh-btn-container .refresh-btn-bound {
  position: absolute;
  left: 0;
  top: 0;
  width: 130rpx;
  height: 130rpx;
}

.night.refresh-btn-container .refresh-btn-bound {
  opacity: 0.7;
}

.refresh-btn-container .refresh-btn-inner {
  position: absolute;
  left: 0;
  top: 0;
  width: 130rpx;
  height: 130rpx;
}

.refresh-btn-active .refresh-btn-inner {
  animation: 0.6s refreshAnimation linear infinite;
}

.refresh-tip-tool {
  font-size: 30rpx;
  background: #ffaf3d;
  color: #fff;
  border-radius: 15rpx;
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  bottom: 15rpx;
  left: 10rpx;
}

.refresh-tip-tool::after {
  content: "";
  display: block;
  position: absolute;
  left: 112rpx;
  top: 80rpx;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 16rpx solid rgba(255, 175, 61, 1);
}

@-webkit-keyframes refreshAnimation {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

@keyframes refreshAnimation {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

