<template name="tempSearchFrom">
  <view>
    <form catchsubmit="formSubmit" catchreset="formReset" id="search-form">
      <view class="search-pancel">
        <view>
          <input value="" id="search-input" value="{{searchKey}}" name="input" confirm-type="search" class="search-input" placeholder="搜索你感兴趣的内容..." bindconfirm="formSubmit"></input>
          <button class="search-button" form-type="submit" size="mini" plain="true">
            <icon type="search" color="#959595" size="16" />
          </button>
        </view>
      </view>
    </form>
  </view>
</template>