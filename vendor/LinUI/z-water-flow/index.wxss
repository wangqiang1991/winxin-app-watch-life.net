
.water-flow-item {
  width: 345rpx;
  box-shadow: 0px 8rpx 20rpx 0px rgba(9, 36, 66, 0.1);
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
}

.water-flow-img {
  width: 345rpx;
  height: 400rpx;
  display: block;
}


.water-flow-content {
  width: 345rpx;
  padding: 20rpx 20rpx 40rpx;
  box-sizing: border-box;
}

.water-flow-top {
  width: 100%;
  font-size: 15px;
  font-weight: 500;
  line-height: 1.5;
  color: #333;
}
.water-content-price text {
  font-size: 28rpx;
  font-weight: 500;
  color: #ff5733;
  margin-right: 20rpx;
}
.water-content-price text:last-child{
  margin-right: 0;
}
.water-flow-middle {
  width: 100%;
  font-size: 24rpx;
  color: #959595;
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
}

.water-flow-bottom {
  font-size: 24rpx;
  color: #959595;
}



.life-container {
  width: 340rpx !important;
  padding: 0 0 20rpx 0 !important;
  background-color: #fff !important;
  box-shadow: 0px 8rpx 20rpx 0px rgba(9, 36, 66, 0.04) !important;
  border-radius: 16rpx !important;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.life-img {
  width: 340rpx !important;
  height: 380rpx !important;
}

.life-product-contianer {
  padding: 0 10rpx;
  display: flex;
  flex-direction: column;
}